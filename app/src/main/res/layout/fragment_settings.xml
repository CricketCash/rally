<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/spacing_medium"
      >





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rally is a personal finance app that uses Material Design components and Material Theming to create an on-brand experience with a data-driven aesthetic."
        android:textAppearance="?attr/textAppearanceBody1"
        />



    <TextView
        android:id="@+id/tv_about_rally_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="Rally is a part of Google's Material Studies. Visit https://material.io/design/material-studies/rally.html to learn more about this project. It is originally a design case study. And no codes."
        android:textAppearance="?attr/textAppearanceBody1"
        />

    <TextView
        android:id="@+id/tv_about_open_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="So, we implement the app, making every single UI components as close as possible. You can check source code at https://github.com/hashlin/rally."
        android:textAppearance="?attr/textAppearanceBody1"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x_large"
        android:text="Meet us on twitter"
        android:textAppearance="?attr/textAppearanceBody2"
        />


    <LinearLayout
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <com.google.android.material.button.MaterialButton
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/spacing_small"
          android:layout_weight="1"
          android:id="@+id/btn_cma"
          android:text="\@Thechanmyaeaung"
          android:textAllCaps="false"
          android:textSize="10sp"
          style="?materialButtonOutlinedStyle"

          />
      <com.google.android.material.button.MaterialButton
          android:layout_width="0dp"
          android:id="@+id/btn_lmp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/spacing_small"
          android:layout_weight="1"
          android:text="\@Linminphyoe1"
          android:textAllCaps="false"
          android:textSize="10sp"
          style="?materialButtonOutlinedStyle"
          />
    </LinearLayout>
  </LinearLayout>

</ScrollView>